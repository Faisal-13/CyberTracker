@model IEnumerable<CyberTracker.Models.Incident>

<h2>Cyber Security Incidents</h2>

<div class="row mb-3 align-items-center">
    <div class="col-md-6">
        <a asp-action="Create"
           style="background-color: #009933 !important;
                  color: white !important;
                  padding: 10px 20px;
                  text-decoration: none;
                  border-radius: 5px;
                  border: 2px solid #009933;
                  font-weight: bold;
                  display: inline-block;">
            Report New Incident
        </a>
    </div>
    <div class="col-md-6">
        <form asp-action="Index" method="get" class="d-flex justify-content-end">
            <div class="input-group">
                <input type="text" name="searchString" class="form-control" placeholder="Search by title..." value="@ViewData["CurrentFilter"]" />
                <button type="submit" class="btn btn-outline-primary">Search</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Reset</a>
            </div>
        </form>
    </div>
</div>

<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Severity</th>
            <th>Status</th>
            <th>Reported By</th>
            <th>Date</th>
            <th>Quick Actions</th>
            <th>Manage</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>
                    <span class="badge bg-@(item.Severity == "Critical" ? "danger" : (item.Severity == "High" ? "warning" : "info"))">
                        @item.Severity
                    </span>
                </td>
                <td>
                    <span class="badge bg-@(item.Status == "Resolved" ? "success" : "secondary")">
                        @item.Status
                    </span>
                </td>
                <td>@(item.Reporter?.Email ?? "Unknown")</td>
                <td>@item.CreatedAt.ToShortDateString()</td>

                <td>
                    @if (User.IsInRole("Admin") && item.Status != "Resolved" && item.Status != "Closed")
                    {
                        <form asp-action="ChangeStatus" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />

                            @if (item.Status == "Open")
                            {
                                <input type="hidden" name="newStatus" value="In Progress" />
                                <button type="submit" class="btn btn-sm btn-outline-primary">Start Work</button>
                            }
                            else if (item.Status == "In Progress")
                            {
                                <input type="hidden" name="newStatus" value="Resolved" />
                                <button type="submit" class="btn btn-sm btn-outline-success">Resolve</button>
                            }
                        </form>
                    }
                </td>

                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light border">Details</a>

                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>