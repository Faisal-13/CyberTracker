@model IEnumerable<CyberTracker.Models.Incident>

<h2>Cyber Security Incidents</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Report New Incident</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Severity</th>
            <th>Status</th>
            <th>Reported By</th>
            <th>Date</th>
            <th>Quick Actions</th>
            <th>Manage</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>
                    <span class="badge bg-@(item.Severity == "Critical" ? "danger" : (item.Severity == "High" ? "warning" : "info"))">
                        @item.Severity
                    </span>
                </td>
                <td>
                    <span class="badge bg-@(item.Status == "Resolved" ? "success" : "secondary")">
                        @item.Status
                    </span>
                </td>
                <td>@(item.Reporter?.Email ?? "Unknown")</td>
                <td>@item.CreatedAt.ToShortDateString()</td>

                <td>
                    @if (User.IsInRole("Admin") && item.Status != "Resolved" && item.Status != "Closed")
                    {
                        <form asp-action="ChangeStatus" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />

                            @if (item.Status == "Open")
                            {
                                <input type="hidden" name="newStatus" value="In Progress" />
                                <button type="submit" class="btn btn-sm btn-outline-primary">Start Work</button>
                            }
                            else if (item.Status == "In Progress")
                            {
                                <input type="hidden" name="newStatus" value="Resolved" />
                                <button type="submit" class="btn btn-sm btn-outline-success">Resolve</button>
                            }
                        </form>
                    }
                </td>

                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light border">Details</a>

                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
    <form asp-action="Index" method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="searchString" class="form-control" placeholder="Search by title or description..." value="@ViewData["CurrentFilter"]" />
            <button type="submit" class="btn btn-outline-primary">Search</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Reset</a>
        </div>
    </form>
</table>