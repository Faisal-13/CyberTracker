@model IEnumerable<CyberTracker.Models.Incident>

<h2>Cyber Security Incidents</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Report New Incident</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Severity</th>
            <th>Status</th>
            <th>Reported By</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>
                    @* Simple badge coloring based on severity *@
                    <span class="badge bg-@(item.Severity == "Critical" ? "danger" : "info")">
                        @item.Severity
                    </span>
                </td>
                <td>@item.Status</td>
                <td>@(item.Reporter?.Email ?? "Unknown")</td>
                <td>@item.CreatedAt.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Details</a>

                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>