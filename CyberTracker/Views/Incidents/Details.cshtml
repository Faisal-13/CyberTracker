@model CyberTracker.Models.Incident

<h2>Incident Details</h2>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Severity</dt>
        <dd class="col-sm-10">
            <span class="badge bg-@(Model.Severity == "Critical" ? "danger" : "info")">
                @Model.Severity
            </span>
        </dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Reported Date</dt>
        <dd class="col-sm-10">@Model.CreatedAt</dd>

        <dt class="col-sm-2">Reporter</dt>
        <dd class="col-sm-10">@(Model.Reporter?.Email ?? "Unknown")</dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    }
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>